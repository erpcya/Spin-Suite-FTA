            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.spinsuite.login.T_Connection" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.view.LV_Menu" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
