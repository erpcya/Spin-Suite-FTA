        <activity android:name="org.spinsuite.view.V_Process" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.view.LV_AttachView" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.fta.view.V_AddTFLine" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.fta.view.V_FarmerInfo" android:label="@string/app_name" android:configChanges="orientation|screenSize"> </activity>
        <activity android:name="org.spinsuite.fta.view.V_AddSuggestedProduct" android:label="@string/app_name" 
            							android:configChanges="orientation|screenSize" 
            							android:windowSoftInputMode="adjustPan|adjustResize"> </activity>
