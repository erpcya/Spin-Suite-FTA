<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/i_TF_SuggestedProduct"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7" >
    
    <!-- Product Category -->
    <TextView
        android:id="@+id/tv_ProductCategory"
        style="@style/TextTitleList"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/M_Product_Category_ID" />

    <!-- Farming Stage and Dosage -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >
            
	   	<TextView
	   	    android:id="@+id/tv_FarmingStage"
	   	    style="@style/TextTitleList"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="1"
	   	    android:padding="0dp"
	   	    android:text="@string/FTA_FarmingStage_ID" />
	            
	    <TextView
			android:id="@+id/tv_QtyDosageLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="end"
		    android:text="@string/Dosage"
		    style="@style/TextTitleList" />
	   
	   	<TextView
			android:id="@+id/tv_QtyDosageByAreaLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="end"
		    android:text="@string/DosageByEffArea"
		    style="@style/TextTitleList" />
	</LinearLayout>
    
    <!-- Product -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >
            
	   	<TextView
			android:id="@+id/tv_Product"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/M_Product_ID"
		    style="@style/TextItemList" />
	            
	    <TextView
			android:id="@+id/tv_QtyDosage"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="end"
		    android:text="@string/Dosage"
		    style="@style/TextItemList" />
	    
	   	<TextView
			android:id="@+id/tv_QtyDosageByArea"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="end"
		    android:text="@string/DosageByEffArea"
		    style="@style/TextItemList" />
	</LinearLayout>
</LinearLayout>