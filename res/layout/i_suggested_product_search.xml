<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/i_TF_SuggestedProduct"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2" >

    <!-- Product -->
    <TextView
        android:id="@+id/tv_Product"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        style="@style/TextTitleList"
        android:text="@string/None" />
    
    
   	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="6" >
        
	    <!-- Start Date -->
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="2" >
		    	
		    <TextView
		    	android:id="@+id/tv_DayFromLabel"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/DayFrom"
		        style="@style/TextTitleList" />
	        	
	        <TextView
		    	android:id="@+id/tv_DayFrom"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="@string/None"
		        style="@style/TextItemList" />
	        
		</LinearLayout>
	    
	    <!-- End Date -->
	
	  	<LinearLayout
	  	    android:layout_width="match_parent"
	  	    android:layout_height="wrap_content"
	  	    android:orientation="horizontal"
	  	    android:weightSum="2" >
		    	
			<TextView
		    	android:id="@+id/tv_DayToLabel"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:text="@string/DayTo"
		        style="@style/TextTitleList" />
				
			<TextView
		    	android:id="@+id/tv_DayTo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="@string/None"
		        style="@style/TextItemList" />
		</LinearLayout>
	    
	    <!-- Suggested, To Apply, Ordered -->	
	    <!-- Suggested -->
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="2" >
	        
	        <TextView
				android:id="@+id/tv_QtySuggestedLabel"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Suggested"
			    style="@style/TextTitleList" />
		            
		   	<TextView
				android:id="@+id/tv_QtySuggested"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="@string/None"
			    style="@style/TextItemList" />
		</LinearLayout>
	        
	    <!-- To Apply -->
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="2" >
	            
		   	<TextView
				android:id="@+id/tv_QtyDosageLabel"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Dosage"
			    style="@style/TextTitleList" />
		            
		    <TextView
				android:id="@+id/tv_QtyDosage"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:gravity="right"
			    android:text="@string/None"
			    style="@style/TextItemList" />
		</LinearLayout>
	       
	    <!-- Ordered -->
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:weightSum="2" >
		    		
		    <TextView
		        android:id="@+id/tv_QtyOrderedLabel"
		        style="@style/TextTitleList"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:gravity="center_vertical"
		        android:text="@string/Qty" />
		            
		   	<EditText
		   	    android:id="@+id/et_QtyOrdered"
		   	    android:layout_width="match_parent"
		   	    android:layout_height="wrap_content"
		   	    android:gravity="right"
		   	    android:inputType="numberDecimal"
		   	    android:selectAllOnFocus="true"
		   	    android:hint="@string/Zero"
		   	    style="@style/EditTextStandard" />

	    </LinearLayout>
	</LinearLayout>
</LinearLayout>