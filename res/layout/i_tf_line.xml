<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/i_TF_Line"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="6" >
    
	<!-- Farm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
            android:id="@+id/tv_FarmLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/FTA_Farm_ID"
            style="@style/TextTitleList" />

        <TextView
            android:id="@+id/tv_Farm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/None"
            style="@style/TextItemList" />
        
    </LinearLayout>
    
    <!-- Farm Division-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
            android:id="@+id/tv_FarmDicisionLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/FTA_FarmDivision_ID"
            style="@style/TextTitleList" />

        <TextView
            android:id="@+id/tv_FarmDivision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/None"
            style="@style/TextItemList" />
        
    </LinearLayout>
    
    
    <!-- Farming -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
            android:id="@+id/tv_FarmingLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/FTA_Farming_ID"
            style="@style/TextTitleList" />

        <TextView
            android:id="@+id/tv_Farming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/None"
            style="@style/TextItemList" />

    </LinearLayout>
    
    <!-- Farming Stage -->	
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
            android:id="@+id/tv_FarmingStageLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/FTA_FarmingStage_ID"
            style="@style/TextTitleList" />

        <TextView
            android:id="@+id/tv_FarmingStage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/None"
            style="@style/TextItemList" />

    </LinearLayout>
	
    <!-- Observation Type -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
            android:id="@+id/tv_ObservationTypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/FTA_ObservationType_ID"
            style="@style/TextTitleList" />

        <TextView
            android:id="@+id/tv_ObservationType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/None"
            style="@style/TextItemList" />

    </LinearLayout>
    
    <!-- Comments -->
	<TextView
	    android:id="@+id/tv_Comments"
	    style="@style/TextItemList"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/Comments" />
	    
</LinearLayout>