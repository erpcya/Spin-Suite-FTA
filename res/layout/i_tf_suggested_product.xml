<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/i_TF_SuggestedProduct"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7" >
    
    <!-- Product -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
		
        <TextView
			android:id="@+id/tv_ProductLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/M_Product_ID"
		    style="@style/TextTitleList" />
        
        <TextView
			android:id="@+id/tv_Product"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="right"
		    android:layout_weight="1"
		    android:text="@string/None"
		    style="@style/TextItemList" />
	    
	</LinearLayout>
    
    <!-- Start Date -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="gone" >
	    	
	    <TextView
	    	android:id="@+id/tv_DateFromLabel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/DateFrom"
	        style="@style/TextTitleList" />
        	
        <TextView
	    	android:id="@+id/tv_DateFrom"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_weight="1"
	        android:text="@string/None"
	        style="@style/TextItemList" />
        
	</LinearLayout>
    
    <!-- End Date -->

  	<LinearLayout
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	    android:weightSum="2"
  	    android:visibility="gone" >
	    	
		<TextView
	    	android:id="@+id/tv_DateToLabel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/DateTo"
	        style="@style/TextTitleList" />
			
		<TextView
	    	android:id="@+id/tv_DateTo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:layout_weight="1"
	        android:text="@string/None"
	        style="@style/TextItemList" />
	</LinearLayout>
    
    <!-- Suggested, To Apply, Ordered -->	
    <!-- Suggested -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
        
        <TextView
			android:id="@+id/tv_QtySuggestedLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/Suggested"
		    style="@style/TextTitleList" />
	            
	   	<TextView
			android:id="@+id/tv_QtySuggested"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:text="@string/None"
		    style="@style/TextItemList" />
	</LinearLayout>
        
    <!-- To Apply -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
            
	   	<TextView
			android:id="@+id/tv_QtyDosageLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/Dosage"
		    style="@style/TextTitleList" />
	            
	    <TextView
			android:id="@+id/tv_QtyDosage"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:text="@string/None"
		    style="@style/TextItemList" />
	</LinearLayout>
       
    <!-- Ordered -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
	    		
	    <TextView
			android:id="@+id/tv_QtyOrderedLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/Qty"
		    style="@style/TextTitleList" />
	            
	   	<TextView
			android:id="@+id/tv_QtyOrdered"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:text="@string/None"
		    style="@style/TextItemList" />
    </LinearLayout>
	
	<!-- Warehouse -->

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:weightSum="2"
	    android:visibility="gone" >
	    		
	    <TextView
			android:id="@+id/tv_WarehouseLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/M_Warehouse_ID"
		    style="@style/TextTitleList" />
	            
	    <TextView
			android:id="@+id/tv_Warehouse"
	    	android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_weight="1"
	    	android:text="@string/None"
	    	style="@style/TextTitleList" />
    </LinearLayout>
    
	<!-- Is Applied -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >
	    		
	    <TextView
			android:id="@+id/tv_IsAppliedLabel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/Applied"
		    style="@style/TextTitleList" />
	            
	   	<TextView
			android:id="@+id/tv_IsApplied"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:gravity="right"
		    android:text="@string/None"
		    style="@style/TextItemList" />
    </LinearLayout>
</LinearLayout>